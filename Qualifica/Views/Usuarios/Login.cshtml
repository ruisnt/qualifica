@model Qualifica.Models.Usuario


@{
    ViewData["Title"] = "Login";
    ViewBag.Login = "active";
}



<div class="row">

    @{
        string erro = ViewBag.Erro as string;

    }

    <form asp-action="Login">

        @if (!string.IsNullOrWhiteSpace(erro))
        {
            <div class="form-group">
                <span class="text-danger">@erro</span>
            </div>
        }


        <div class="form-group">
            <label asp-for="Login" class="control-label"></label>
            <input asp-for="Login" class="form-control" />
        </div>
        <div class="form-group">
            <label asp-for="Senha" class="control-label"></label>
            <input asp-for="Senha" type="password" class="form-control" />
        </div>

        <div class="form-group">
            <input type="submit" value="Enviar" class="btn btn-default" />
        </div>

    </form>

</div>
